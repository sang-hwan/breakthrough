# Database 설정
DB_USER=postgres
DB_PASSWORD=1234
DB_HOST=localhost
DB_PORT=5432
DB_NAME=my_trading_db

# 로깅 관련 설정
# ENVIRONMENT: development 또는 production (개발 환경에서는 development 권장)
ENVIRONMENT=development
# LOG_DETAIL_LEVEL: DEBUG 또는 INFO (개발 환경에서 상세 로그가 필요하면 DEBUG, 그렇지 않으면 INFO)
LOG_DETAIL_LEVEL=DEBUG

# (기존 LOG_LEVEL도 사용 가능하도록 남겨둘 수 있음)
LOG_LEVEL=INFO

# 모듈별 AggregatingHandler 임계치 설정
# 높은 빈도의 로그를 출력하는 모듈은 임계치를 높여서 로그 집계 빈도를 줄입니다.
AGG_THRESHOLD_BACKTESTER=10000
AGG_THRESHOLD_RISK_MANAGER=10000
AGG_THRESHOLD_STRATEGIES=10000
AGG_THRESHOLD_ASSET_MANAGER=10000
AGG_THRESHOLD_ENSEMBLE_MANAGER=10000
AGG_THRESHOLD_ACCOUNT=10000
AGG_THRESHOLD_TRADE_MANAGER=10000
